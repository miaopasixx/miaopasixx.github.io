<div class="row hidden-sm">
    <div class="col-sm-4">
        <div class="trm-card trm-label trm-label-light text-center">
            <%- icon(theme.icons.calendar,'trm-icon') %><br>
            <%= date(page.date, theme.datetime_foramt.post_info.date) %>
        </div>
    </div>
    <div class="col-sm-4">
        <div class="trm-card trm-label trm-label-light text-center">
            <%- icon(theme.icons.clock,'trm-icon') %><br>
            <%= date(page.date, theme.datetime_foramt.post_info.time) %>
        </div>
    </div>
    <div class="col-sm-4">
        <div class="trm-card trm-label trm-label-light text-center">
            <%- icon(theme.icons.user,'trm-icon') %><br>
            <%= theme.user.name %>
        </div>
    </div>
</div>